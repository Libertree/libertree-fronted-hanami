<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Libertree</title>
    <%= favicon %>

    <%= stylesheet 'application' %>
  </head>
  <body>
    <header>
      <% if flash[:error] %>
        <%= render partial: 'application/user-message', locals: {type: :error} %>
      <% end %>
      <% if flash[:success] %>
        <%= render partial: 'application/user-message', locals: {type: :success} %>
      <% end %>

      <% if current_account %>
        <nav id="nav" aria-label="Navigation">
          <ul>
            <li><a href="<%= routes.path(:home) %>">home</a><li>
            <li><a
              href="<%= routes.path(:post_latest_unread) %>"
              title="read the latest unread post"
            >latest unread</a></li>
            <li><span>Signed in as <%= current_account.username %></span></li>
            <li><a href="<%= routes.path(:sign_out) %>">sign out</a></li>
          </ul>
        </nav>
      <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
