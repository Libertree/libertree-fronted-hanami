<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Libertree</title>
    <%= favicon %>

    <%= stylesheet 'application' %>
  </head>
  <body>
    <header>
      <% if flash[:error] %>
        <div>
          <%= flash[:error] %>
        </div>
      <% end %>
      <% if flash[:success] %>
        <div>
          <%= flash[:success] %>
        </div>
      <% end %>

      <% if current_account %>
        <nav aria-label="Navigation">
          <a href="<%= routes.path(:home) %>">home</a>
          <a
            href="<%= routes.path(:post_latest_unread) %>"
            title="read the latest unread post"
          >latest unread</a>
          <span>Signed in as <%= current_account.username %></span>
          <a href="<%= routes.path(:sign_out) %>">sign out</a>
        </nav>
      <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
